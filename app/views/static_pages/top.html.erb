<% provide(:title, "Top") %>
<div class="center jumbotron">
  <h1>勤怠管理システム</h1>
  <% if logged_in? %>
    <%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary #{"disabled" if logged_in?}" %>
    <p>ログイン中です</p>
  <% else %>
    <%= link_to "ログイン", signup_path, class: "btn btn-lg btn-primary" %>
    <p>
      アカウント作成は<%= link_to "こちら", signup_path %>から
    </p>
  <% end %>
</div>
